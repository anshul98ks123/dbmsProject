<% include ./partials/header.ejs%>
<% include ./partials/navbar.ejs%>
<% include ./partials/flash.ejs%>
<br><br>
<form method="post" action="/signupdriver" id="form1">
   <h3>Personal Details</h3>
   <hr>
   <div class="form-group">
      <label for="name">Full Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter full name" required>
   </div>
   <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" requirede>
   </div>
   <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
   </div>
   <div class="form-group">
      <label for="date">Date of Birth</label>
      <input type="date" class="form-control" id="date" name="date" placeholder="date" required>
   </div>
   <hr>
   <h3>Driver Details</h3>
   <hr>
   <div class="form-group">
      <label for="license">License No.</label>
      <input type="text" class="form-control" id="license" name="license" placeholder="Enter license number" required>
   </div>
   <label for="loc">Current Location</label>
   <select class="form-control" name="loc" id="loc" required>
      <option value="rider" disabled selected>Choose Location</option>
      <% for(var i=0;i<result.length;i++) {%>
         <option value="<%= result[i]['zipcode']%>">
            <%= result[i]['zipcode'] %> - <%= result[i]['place']%>
         </option>
      <% }%>
   </select>
   <hr>
   <h3>Cab Details</h3>
   <hr>
   <label for="type">Cab Type</label>
   <select class="form-control" name="type" id="type" required>
      <option value="rider" disabled selected>Choose Cab Type</option>
      <option value="Go">Go</option>
      <option value="Prime">Prime</option>
      <option value="X">X</option>
   </select>
   <div class="form-group">
      <label for="model">Model Name</label>
      <input type="text" class="form-control" id="model" name="model" placeholder="Enter model name" required>
   </div>
   <div class="form-group">
      <label for="color">Color</label>
      <input type="text" class="form-control" id="color" name="color" placeholder="Enter color" required>
   </div>
   <div class="form-group">
      <label for="man">Manufacturer</label>
      <input type="text" class="form-control" id="man" name="man" placeholder="Enter Manufacturer name" required>
   </div>
   <hr>
   <button class="btn btn-primary">Register As Driver</button>
</form>
<br><br>
